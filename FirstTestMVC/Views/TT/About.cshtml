
@{
    ViewBag.Title = "About";
}

<!-- About Section -->
<section class="success" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="main-headers">About</h2>
                <hr class="star-light">
            </div>
        </div>
        <div class="bs-example">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Carousel indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for carousel items -->
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="row aboutRow">
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <p>
                                    I am a recent graduate of UNC Chapel Hill hoping to jumpstart my career in Raleigh, NC. I am very interested in exploring the links that can be made between literature, philosophy, and technology.
                                    In my free time I like to cook, code, and read a good book.
                                </p>
                            </div>
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <a href="~/Tim'sResume1-16.pdf" class="btn btn-lg btn-outline" target="_blank"><i class="fa fa-file-text"></i> My Resume</a>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row aboutRow">
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <h3>Skills</h3>
                            </div>
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <br />
                                <p>HTML 5  |  CSS  |  Bootstrap  |  JavaScript  |  C#</p>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <div class="row aboutRow">
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <h3>Past Experience</h3>
                                <br />
                            </div>
                            <div class="col-lg-8 col-lg-offset-2 text-center">
                                <center>
                                    <div class="row">
                                        <h4>
                                            <div class="col-xs-3">2014</div>
                                            <div class="col-xs-1"></div>
                                            <div class="col-xs-4">2015</div>
                                            <div class="col-xs-1"></div>
                                            <div class="col-xs-3">2016</div>
                                        </h4>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="row">
                                        <div class="col-xs-3">UNC Student Fundraiser</div>

                                        <div class="col-xs-3">Graduated UNC-CH</div>

                                        <div class="col-xs-3">Temp English Teacher</div>

                                        <div class="col-xs-3">Coder Foundry Student</div>

                                    </div>
                                </center>
                            </div>
                        </div>
                    </div>
                    <!-- Carousel controls -->
                    <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="carousel-control right" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

